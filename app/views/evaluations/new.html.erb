<div class="container">
  <h1>New evaluation</h1>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <%= image_tag @student.image, class: "img-rounded img-responsive" %>
                    </div>
                    <div class="col-sm-6 col-md-8" style="height: 158.33px;">
                        <h4><%= @student.full_name %></h4>
                        <p>
                            <i class="glyphicon glyphicon-education"></i>Batch <%= @student.batch %>
                            <br />
                            <i class="glyphicon glyphicon-gift"></i>June 02, 1988
                            <br />
                            <div style="position: absolute; bottom: 0">
                              <% @colors.each do |color| %>
                                <div style="width: 25px; height: 25px; background: <%= color %>; float: left; margin-left: 1px; "></div>
                              <% end %>
                            </div>
                        </p>
                        <!-- Split button -->
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <%= link_to "Edit", edit_student_evaluation_path(@student.id, @evaluation_edit.id), class: "btn btn-primary" %>

        </div>

    </div>

<!-- form -->
</div>


<div class="container">

 <div class="panel panel-success">
   <div class="panel-heading">
     Create new evaluation
   </div>

   <div class="panel-body">
     <%= render 'form' %>
   </div>
 </div>
</div>
