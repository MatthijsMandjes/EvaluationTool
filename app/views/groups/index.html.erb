<div class="container">
        <div class="row">
        <div class="gallery col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h1 class="gallery-title">Classes</h1>
        </div>



          <% @groups.each do |group| %>
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter hdpe">
              <div class="list-group">
                 <%= link_to "BATCH #{group.batch}", group_path(group.id), class: "list-group-item active" %>
                 <span class="list-group-item list-group-item-action">Total students: <%= Student.where(batch: group.batch).count %></span>
                 <span class="list-group-item list-group-item-action">Start date: <%= group.start_date %></span>
                 <span class="list-group-item list-group-item-action">End date: <%= group.end_date %></span>
              </div>
            </div>
          <% end %>
        </div>
        <%= link_to "Create class", new_group_path %>

</div>
